{
  "name": "ndsi",
  "version": "1.0.0-rc.1",
  "description": "Node.js utility tool for creating and checking files and directories structure integrity",
  "license": "MIT",
  "author": {
    "email": "jimikar@gmail.com",
    "name": "Jimi (Dimitris) Charalampidis"
  },
  "repository": "JimiC/node-directory-structure-integrity",
  "engines": {
    "node": ">=6.14"
  },
  "keywords": [
    "node",
    "nodejs",
    "cli",
    "integrity",
    "checker",
    "check",
    "validation",
    "file",
    "files",
    "folder",
    "forders",
    "directory",
    "directories",
    "structure",
    "hash",
    "checksum",
    "checksums",
    "ndsi"
  ],
  "main": "lib/index.js",
  "bin": {
    "ndsi": "lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "node ./out/src/cli.js",
    "lint": "tslint -p .",
    "build:dev": "npm run build -- -p tsconfig.dev.json",
    "prebuild": "npm run cleanUp && npm run lint",
    "build": "tsc",
    "postbuild": "cpx \"src/schemas/**/*\" out/src/schemas",
    "cleanUp": "rimraf ./.nyc_output ./coverage ./out ./lib",
    "pretest": "npm run build:dev",
    "test": "nyc -c -x '' mocha ./out/test",
    "posttest": "nyc report -r lcov",
    "prepublishOnly": "npm run build && cpx \"out/src/**/*\" lib"
  },
  "dependencies": {
    "ajv": "^6.5.0",
    "minimatch": "^3.0.4",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "6",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^4.3.3",
    "@types/yargs": "^11.0.0",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "sinon": "^5.0.7",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
